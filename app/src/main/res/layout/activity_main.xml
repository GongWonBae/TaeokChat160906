<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/ip_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="IP주소를입력하세요" />

        <EditText
            android:id="@+id/port_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PORT주소를입력하세요" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/ID_Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="IP주소를입력하세요"
                android:text="201131046" />

            <EditText
                android:id="@+id/PW_Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PORT주소를입력하세요"
                android:text="2" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/connect_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연결" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/connect_Button"
            android:layout_toEndOf="@+id/connect_Button" />

        <Button
            android:id="@+id/beacon_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비콘받기"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/login_btn"
            android:layout_toEndOf="@+id/login_btn" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.21">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="49dp" >

            <TextView
                android:id="@+id/showText_TextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="" />
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:id="@+id/scrollView">

            <TextView
                android:id="@+id/sendText_TextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:id="@+id/scrollView2" >

            <TextView
                android:id="@+id/BeaconList_View"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/editText_massage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ems="10"
            android:hint="메세지를작성해주세요" />

        <Button
            android:id="@+id/Button_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="전송" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/Serch_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:text="조회" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출석"
            android:id="@+id/chulserg_btn" />

    </LinearLayout>

</LinearLayout>
